<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_intro"
    android:gravity="center"
    tools:context=".ForgetPasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/baseline_button_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quên Mật Khẩu"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tilEmailForgetPassword"
                android:autofillHints=""
                android:background="@drawable/baseline_button_background"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:padding="8dp"
                android:hint="Email"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,TextFields" />
            <TextView
                android:id="@+id/tvSubmitMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="Kiểm Tra Hòm Thư Của Bạn"
                tools:ignore="HardcodedText"
                android:textColor="@color/blue"
                android:textSize="14sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Xác Nhận "
                android:id="@+id/btnForgotPasswordSubmit"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                app:cornerRadius = "20dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>